@{
    Layout = null;
}
@using System.Data;
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en">
<head>
	<style type="text/css">
	</style>
<!--网页左上角小图标-->
<link rel="shortcut icon" href="/Content/images/icon_logo.ico" />
<meta http-equiv="X-UA-Compatible" content="IE=EmulateIE7" />
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="description" content="培知教育，成人高考，自考，普通话，教师资格证，教育培训"/>
<meta name="Keywords" content="培知教育，成人高考，自考，普通话，教师资格证，教育培训"/>
<title>考试中心-模拟练习</title>
<!--js-->
<script type="text/javascript" src="/Content/js/Rich_Lee.js"></script>
<script type="text/javascript" src="/Content/js/rich_one.js"></script>
<script type="text/javascript" src="/Content/js/Html5shiv.js"></script>
<!-- css -->
<link rel="stylesheet" type="text/css" href="/Content/css/common.css"/>
<link rel="stylesheet" type="text/css" href="/Content/css/rich_one.css"/>
    <style type="text/css">
        .hide {
            display:none;
        }
    </style>
</head>

<body class="bgc_fa">
   <!-- 顶部 -->
  
  @{
       Html.RenderAction("HeadPart", "Base", new { id = 3});
         }
  
  <!-- 顶部导航 END -->
 <!-- <div style="border-top: #DDDDDD 1px solid;width: 100%;height: 10px;"></div>-->
	<section class="rexamp_box">
		
        <div class="rexamp_left">
			<div class="left_nav">
		        <ul>
		         <li><a href="/Exam/ExamIndex">模拟考试</a></li>
                    <li><a href="/Exam/Examtest">模拟练习</a></li>
                    <li><a href="/Exam/Examzhtest">综合练习</a></li>
		         
		        </ul>
	        <div class="bg"></div>
      	</div>
		</div>
		<div class="rexamp_right02">
			<header>
				 @ViewBag.title
			</header>
			<div class="explain">
				<label class="sty">本试题共<br/>@ViewBag.counts 题</label>
				<label class="sty">卷面总分<br/>@ViewBag.grades 分</label>	
			    <label>练习时间<br/>90 分钟</label>	
			</div>
			<ul class="explain_type02">
				<li class="li02">
					一、单项选择题 
				</li>
				
				
                @{
                    DataTable dt = ViewBag.xzt as DataTable;
                    var i=1;
                    foreach(DataRow dr in dt.Rows)
                    {
                    <li class="li05">
					<p class="main">
						@i.@dr["Question"].ToString()（@dr["trades"].ToString()分）
					</p>
					<div>
						<span>A. @dr["A"].ToString() </span><br/>
						<span>B. @dr["B"].ToString() </span><br/>
						<span>C. @dr["C"].ToString()</span><br/>
						<span>D. @dr["D"].ToString()</span>
					</div> 
				</li>
				<li class="li06">
					<span onclick="answer(this)">
						<img class="wrong" src="/Content/images/r_examp_wrong.png" alt="A"/>
						
						<label>A</label>
					</span>
					<span onclick="answer(this)">
						<img class="wrong" src="/Content/images/r_examp_wrong.png" alt="B"/>
						
						<label>B</label>
					</span>
					<span onclick="answer(this)">
						<img class="wrong" src="/Content/images/r_examp_wrong.png" alt="C"/>
						
						<label>C</label>
					</span>
					<span onclick="answer(this)">
						<img class="wrong" src="/Content/images/r_examp_wrong.png" alt="D"/>
						
						<label>D</label>
					</span>
                    <div class="clear"></div>
                    <div style="margin: 10px 0;width:100%;" class="hide" >
					<label class="yes" style="color: #d4020c;">正确: @dr["Answer"].ToString()</label>
					<p  style="color: #d4020c;">解析：@dr["Analysis"].ToString()</p>
				</div>	
				</li>
                    
                        i++;
                    }
                    
                    }

				<li class="li08"></li>
				<li class="li02">
					二、判断题  
				</li>
				
				
                @{
                    DataTable dpdt = ViewBag.pdt as DataTable;
                    var j = 1;
                    foreach(DataRow dr in dpdt.Rows)
                    {
                    <li class="li05">
					<p class="main">
						@j.@dr["Question"].ToString()（@dr["trades"].ToString()分）
					</p>
					
				</li>
				<li class="li06">
					<span onclick="answer(this)">
						<img class="wrong" src="/Content/images/r_examp_wrong.png" alt="正确"/>
						
						<label>√</label>
					</span>
					<span onclick="answer(this)">
						<img class="wrong" src="/Content/images/r_examp_wrong.png" alt="错误"/>
						
						<label>X</label>
					</span>
                     <div class="clear"></div>
                    <div style="margin: 10px 0;width:100%;" class="hide" >
					<label class="yes" style="color: #d4020c;">正确: @(dr["Answer"].ToString() == "A"?"正确":"错误")</label>
					<p  style="color: #d4020c;">解析：@dr["Analysis"].ToString()</p>
                        </div>
				</li>
                  
                        j++;
                    }
                    }

				<li class="li08"></li>
				<li class="li02">
					三、材料分析题  
				
                @{
                    DataTable clt = ViewBag.clt as DataTable;
                    var t=1;
                    foreach(DataRow dr in clt.Rows)
                    {
                    <li class="li03">
					<p class="main">
						@t. @dr["Question"].ToString()（@dr["trades"].ToString()分）
					</p>
					
					<textarea name="clt"  onchange="answer(this)" rows="" cols=""></textarea>
					 <div class="clear"></div>
                    <div style="margin: 10px 0;width:100%;" class="hide" >
					<label class="yes" style="color: #d4020c;">正确: @dr["Answer"].ToString()</label>
					<p  style="color: #d4020c;">解析：@dr["Analysis"].ToString()</p>
                         </div>
				</li>
                  
                        t++;
                    }
                    }
			</ul>
		</div>
	</section>
		<div style="height: 40px;width: 100%;clear: both;"></div>
  <!-- 底部 -->
   @{
       Html.RenderAction("Foot", "Base");
         }
  <!-- 底部 END -->
</body>
</html>
<script src="/Content/js/jquery-2.0.3.min.js" type="text/javascript"></script>
<script type="text/javascript">
    function answer(obj) {
        $(obj).parent().find("img").attr("src", "/Content/images/r_examp_wrong.png");
        $(obj).find("img").attr("src", "/Content/images/r_examp_choice.png");
        $(obj).parent().find("div").removeClass("hide");
    }
    </script>