@{
    Layout = null;
}

<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en">
<head>
    <!--网页左上角小图标-->
    <link rel="shortcut icon" href="/Content/images/icon_logo.ico" />
    <meta http-equiv="X-UA-Compatible" content="IE=EmulateIE7" />
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <meta name="description" content="培知教育，成人高考，自考，普通话，教师资格证，教育培训"/>
<meta name="Keywords" content="培知教育，成人高考，自考，普通话，教师资格证，教育培训"/>
    <title>易考网</title>
    <!-- css -->
    <link rel="stylesheet" type="text/css" href="/Content/css/common.css"/>
    <link rel="stylesheet" type="text/css" href="/Content/css/main.css"/>
</head>
<body class="bgc_fa">
    <!-- 顶部 -->
    @{
       Html.RenderAction("HeadPart", "Base", new { id = 5});
         }
    <!-- 顶部导航 END -->

    <!-- 新闻资讯 -->
    <div class="news_lists">
        <!-- 标题 -->
        <div class="clear h20"></div>
        <!-- 内容 -->
        <div class="content">
            <!-- 左边导航 -->
            <div class="left_nav">
                <ul>
                    <li><a href="/Home/Notice">重要通知</a></li>
                    <li><a href="/Home/Newslist">新闻动态</a></li>
                </ul>
                <div class="bg"></div>
            </div>
            <!-- 右侧内容 -->
            <div class="right_info">
                <div class="head_ol">
                    <p class="p1">@ViewBag.title</p>
                    <p class="p2">时间：@ViewBag.date 作者：培知教育</p>
                </div>
                <div class="news_art">
                   @Html.Raw(ViewBag.Contents)
                </div>
               
                
            </div>
        </div>
    </div>
    <!-- 新闻资讯 END -->

    <!-- 底部 -->
      @{
     Html.RenderAction("Foot", "Base");
         }
    <!-- 底部 END -->
</body>
</html>
