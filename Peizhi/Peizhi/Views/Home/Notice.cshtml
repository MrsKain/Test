@{
    Layout = null;
}
@using System.Data;
@using Kain_class.HtmlSubstring;
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en">
<head>
<!--网页左上角小图标-->
<link rel="shortcut icon" href="/Content/images/icon_logo.ico" />
<meta http-equiv="X-UA-Compatible" content="IE=EmulateIE7" />
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <meta name="description" content="培知教育，成人高考，自考，普通话，教师资格证，教育培训"/>
<meta name="Keywords" content="培知教育，成人高考，自考，普通话，教师资格证，教育培训"/>
<title>易考网</title>
<!-- css -->
<link rel="stylesheet" type="text/css" href="/Content/css/common.css">
<link rel="stylesheet" type="text/css" href="/Content/css/main.css">
</head>
<body class="bgc_fa">
  <!-- 顶部 -->
  
  <!-- 顶部 END -->

  <!-- 顶部导航 -->
   @{
       Html.RenderAction("HeadPart", "Base", new { id = 5});
         }
  <!-- 顶部导航 END -->

  <!-- 新闻资讯 -->
  <div class="news_lists">
    <!-- 标题 -->
    <div class="title">
      <p class="p1">重要通知</p>
      <p class="p2">Notice</p>
    </div>
    <!-- 内容 -->
    <div class="content">
      <!-- 左边导航 -->
      <div class="left_nav">
        <ul>
          <li><a href="/Home/Notice">重要通知</a></li>
          <li><a href="/Home/Newslist">新闻动态</a></li>
        </ul>
        <div class="bg"></div>
      </div>
      <!-- 右侧内容 -->
      <div class="right_info">
        
       @{
           DataTable dt = ViewBag.table as DataTable;
           foreach(DataRow dr in dt.Rows )
           {
           <div class="news">
          <div class="img">
            <img src="/Content/UploadFiles/images/@dr["images"].ToString()" width="120px" height="80px" alt="培知教育" />
          </div>
          <div class="right">
            <div class="div1">
              <p class="p1"><a href="/Home/NewsInfor/@dr["id"].ToString()">@dr["title"].ToString()</a></p>
              <p class="p2">@dr["Add_Date"].ToString()</p>
            </div>
            <div class="div2">@SubstringFunction.ByteSubString(dr["Contents"].ToString(), 0, 110, true) </div>
          </div>
        </div>
           }
           }
        <!-- 页码 -->
          @{
                            Html.RenderAction("FenYe", "Base", new { pagesize = 6, recordCount = ViewBag.recordCount, pageIndex = ViewBag.pageindex, pageitem = 2, pageUrl = "/Home/Newslist", strWhere = ViewBag.ids });
                        }
      </div>
    </div>
  </div>
  <!-- 新闻资讯 END -->

  <!-- 底部 -->
    @{
     Html.RenderAction("Foot", "Base");
         }
  <!-- 底部 END -->
</body>
</html>