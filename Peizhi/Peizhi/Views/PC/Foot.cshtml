@{
    ViewBag.Title = "底部信息";
    Layout = "~/Views/Shared/_LayoutSellersB.cshtml";
}

<div class="page-content">

    <div class="page-breadcrumbs">
        <ul class="breadcrumb">
            <li>
                <i class="fa fa-home"></i>
                <a href="###">底部信息</a>
            </li>
            <li>
                <a href="/PC/Foot">底部信息</a>
            </li>

        </ul>
    </div>

    <div class="page-header position-relative">
        <div class="header-title">
        </div>

        <div class="header-buttons">
            <a class="sidebar-toggler" href="#">
                <i class="fa fa-arrows-h"></i>
            </a>
            <a class="refresh" id="refresh-toggler" href="#">
                <i class="glyphicon glyphicon-refresh"></i>
            </a>
            <a class="fullscreen" id="fullscreen-toggler" href="#">
                <i class="glyphicon glyphicon-fullscreen"></i>
            </a>
        </div>

    </div>
    <div class="page-body">

        <div class="row">
            <div class="col-lg-6 col-sm-6 col-xs-12" style="margin-left: 25%">
                <div class="widget">
                    <div class="widget-header bordered-bottom bordered-palegreen">
                        <span class="widget-caption">底部信息</span>
                    </div>
                    <div class="widget-body">
                        <div>
                            <form class="form-horizontal form-bordered" role="form">
                                <div class="form-group">
                                    <label for="inputPassword3" class="col-sm-2 control-label no-padding-right">CopyRight</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" value="@ViewBag.copyright" id="company" >
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="inputPassword3" class="col-sm-2 control-label no-padding-right">电话</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" value="@ViewBag.Tel" id="tel" >
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="inputPassword3" class="col-sm-2 control-label no-padding-right">地址</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" value="@ViewBag.Address" id="address" >
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-sm-offset-2 col-sm-10">
                                        <button type="button" onclick="Save()" class="btn btn-palegreen">设置</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

<script src="/Content/js/jquery-1.10.2.min.js" type="text/javascript"></script>
<script type="text/javascript">
    function Save() {
        $.ajax({
            type: "post",
            url: "/PCserver/FootSaveAjax",
            data: {
                company: $("#company").val(),
                tel: $("#tel").val(),
                address: $("#address").val()
            },
            success: function (Issuccess) {
                if (Issuccess == "0") {
                    alert("设置成功");
                }
                else {
                    alert("设置失败");
                }
            }
        });
    }

</script>
