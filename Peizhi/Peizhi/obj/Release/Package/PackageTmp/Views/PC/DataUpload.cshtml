        $.ajax({
            url: "/Base/GetTypeTwo/"+str,
            type: "post",
            dataType: "json",
            data: {

            },

            success: function (data) {
                var jsonObj = data; // $.parseJSON(data.ReturnValue);

                var oSheng = $("#type2");
            
                for (var i = 0; i < jsonObj.length; i++) {
