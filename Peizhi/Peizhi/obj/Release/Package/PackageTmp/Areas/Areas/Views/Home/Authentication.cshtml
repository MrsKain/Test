  <!-- 认证中心 -->
  <article class="certif-center">
    <ul id="tab-ul-2">
      <li class="active"><a href="#" onclick="selectC('教师资格证',this)">教师资格</a></li>
      <li><a href="#" onclick="selectC('教师资格证',this)">普通话</a></li>
