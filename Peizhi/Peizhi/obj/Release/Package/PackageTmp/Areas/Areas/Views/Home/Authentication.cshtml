<script src="/Content/js/jquery-2.0.3.min.js" type="text/javascript"></script>
<script type="text/javascript">
    function selectC(types, obj) {
        $(obj).parent().siblings().removeClass();
        $(obj).parent().addClass("active");
        $.ajax({
            type: "post",
            url: "/HomeServer/AboutAjax",
            data: { types: types },
            success: function (IsSuccess) {
              
               
                $("#Contents").empty()
                $("#Contents").append(IsSuccess);

            }

        });
    }

</script>
